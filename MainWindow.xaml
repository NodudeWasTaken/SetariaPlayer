<Window x:Class="SetariaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SetariaPlayer"
        mc:Ignorable="d"
		ResizeMode="NoResize"
        Title="Setaria Player" Height="264" Width="547">
	<Grid>
		<Button x:Name="StartButton" Content="Start" Margin="10,173,405,10" Click="Button_Click"/>
		<Label Content="Connected devices:" HorizontalAlignment="Left" Margin="356,10,0,0" VerticalAlignment="Top" Height="31" Width="130"/>
		<ListBox x:Name="DeviceList" Margin="356,41,10,10"/>
		<Label 
			Content="Buffer duration:" 
			HorizontalAlignment="Left" 
			Margin="10,41,0,0" 
			VerticalAlignment="Top" 
			Width="145"
			ToolTip="How long the vibration converter's buffer is in seconds"
		/>
		<Slider x:Name="BufferVal" HorizontalAlignment="Left" Margin="218,45,0,0" VerticalAlignment="Top" Width="120" Minimum="0.1" Maximum="30" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" ValueChanged="Slider_ValueChanged"/>
		<Label 
			Content="Minimum update % diff:" 
			HorizontalAlignment="Left" 
			Margin="10,72,0,0" 
			VerticalAlignment="Top" 
			Width="145"
			ToolTip="Minimum percentage difference for a intensity update to be sent to vibration devices"
		/>
		<Slider x:Name="DiffVal" HorizontalAlignment="Left" Margin="218,76,0,0" VerticalAlignment="Top" Width="120" Minimum="0" Maximum="100" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" ValueChanged="Slider_ValueChanged_1"/>
		<Label 
			Content="Max speed:" 
			HorizontalAlignment="Left" 
			Margin="10,134,0,0" 
			VerticalAlignment="Top" 
			Width="101"
			ToolTip="Maximum assumed speed in a funscript which will result in 100% intensity in a vibration device"
		/>
		<Slider x:Name="SpeedVal" HorizontalAlignment="Left" Margin="218,138,0,0" VerticalAlignment="Top" Width="120" Minimum="0.1" Maximum="10" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" ValueChanged="Slider_ValueChanged_2"/>
		<Label 
			Content="Maximum calc % diff:" 
			HorizontalAlignment="Left" 
			Margin="10,103,0,0" 
			VerticalAlignment="Top" 
			Width="145"
			ToolTip="Maximum speed difference to include when calculating average (calculated from newest to oldest) for vibration devices"
		/>
		<Slider x:Name="DiffVal_Copy" HorizontalAlignment="Left" Margin="218,107,0,0" VerticalAlignment="Top" Width="120" Minimum="0" Maximum="100" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" ValueChanged="Slider_ValueChanged_3"/>
		<Label x:Name="BufferLabel" Content="Label" HorizontalAlignment="Left" Margin="156,41,0,0" VerticalAlignment="Top"/>
		<Label x:Name="DiffLabel" Content="Label" HorizontalAlignment="Left" Margin="156,72,0,0" VerticalAlignment="Top"/>
		<Label x:Name="SpeedLabel" Content="Label" HorizontalAlignment="Left" Margin="156,134,0,0" VerticalAlignment="Top"/>
		<Label Content="Vibration converter settings:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
		<Label x:Name="DiffLabel_Copy" Content="Label" HorizontalAlignment="Left" Margin="156,103,0,0" VerticalAlignment="Top"/>
		<Button x:Name="SaveButton" Content="Save" Margin="147,173,335,10" Click="Button2_Click"/>

	</Grid>
</Window>
